  /usr/src/libxcb-screensaver-devel-<VER>-<REL>.tar.bz2
  /usr/src/libxcb-screensaver0-<VER>-<REL>.tar.bz2
  /usr/src/libxcb-shape-devel-<VER>-<REL>.tar.bz2
  /usr/src/libxcb-shape0-<VER>-<REL>.tar.bz2
  /usr/src/libxcb-shm-devel-<VER>-<REL>.tar.bz2
  /usr/src/libxcb-shm0-<VER>-<REL>.tar.bz2
